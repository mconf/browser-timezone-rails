(function() {

  Cookies.set(
    "browser.timezone",
    Intl.DateTimeFormat().resolvedOptions().timeZone,
    {
      expires: 365,
      path: '/',
      secure: <%= ::Rails.application.config.respond_to?(:browser_time_zone_secure_cookie) ?
                    ::Rails.application.config.browser_time_zone_secure_cookie :
                    ::Rails.application.config.force_ssl %>,
      sameSite: <%= ::Rails.application.config.respond_to?(:browser_time_zone_same_site_cookie) ?
                      ::Rails.application.config.browser_time_zone_same_site_cookie :
                      '"Lax"' %>
    }
  );
})();
